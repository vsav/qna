var questionId = <%= @question.id %>
var questionErrorsSelector = 'p#question-' + questionId + '-errors'
$(questionErrorsSelector).html('<%= render 'shared/errors', resource: @question %>');
<% if @question.errors.blank? %>
  $('.notice').html('');
  $('#question-' + questionId + '-title').html('<%= j @question.title %>');
  $('#question-' + questionId + '-body').html('<%= j @question.body %>');
  $('.edit-question-link').show();
  $('form#edit-question-' + questionId).addClass('hidden');
  $('.notice').append('Question was successfully updated.');
<% end %>
